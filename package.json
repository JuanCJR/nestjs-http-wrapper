{
    "name": "nestjs-http-wrapper",
    "author": {
        "name": "Juan C. Jimenez",
        "email": "juancarlo14071@gmail.com",
        "url": "https://github.com/JuanCJR"
    },
    "version": "1.4.1",
    "description": "A wrapper for NestJS HttpService to standardize requests and error handling.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/JuanCJR/nestjs-http-wrapper.git"
    },
    "homepage": "https://github.com/JuanCJR/nestjs-http-wrapper#readme",
    "bugs": {
        "url": "https://github.com/JuanCJR/nestjs-http-wrapper/issues"
    },
    "scripts": {
        "build": "tsc",
        "prepublishOnly": "npm run build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:coverage:html": "jest --coverage --coverageReporters=html",
        "test:coverage:lcov": "jest --coverage --coverageReporters=lcov",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "_pre-release:tag": "VERSION=$(node -p \"require('./package.json').version\") && git tag -a \"v$VERSION\" -m \"Release version $VERSION\" && git push --tags",
        "release": "npm run _pre-release:tag && npm publish"
    },
    "keywords": [
        "nestjs",
        "http",
        "axios",
        "wrapper",
        "helper",
        "http-service",
        "error-handling",
        "typescript",
        "api",
        "client",
        "request",
        "response",
        "interceptor",
        "filter",
        "exception",
        "custom-error",
        "error-format"
    ],
    "license": "ISC",
    "peerDependencies": {
        "@nestjs/axios": "^4.0.0",
        "@nestjs/common": "^11.1.3",
        "axios": "^1.10.0",
        "class-transformer": "^0.5.1",
        "rxjs": "^7.8.2"
    },
    "peerDependenciesMeta": {
        "@nestjs/swagger": {
            "optional": true
        }
    },
    "devDependencies": {
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/testing": "^11.1.3",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.13",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@typescript-eslint/parser": "^8.36.0",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "jest": "^30.0.4",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    },
    "files": [
        "dist/**/*",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
